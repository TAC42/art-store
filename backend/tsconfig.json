{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "include": [
    "*.ts",
    "api/**/*.ts",
    "services/**/*.ts",
    "middleware/**/*.ts",
    "models/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}